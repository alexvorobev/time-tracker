// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  firstName String
  lastName  String
  password  String
  business  String?
  createdAt DateTime  @default(now())
  Day       Fragment[]
  Tracker   Tracker[]
  Project   Project[]
}

model Project {
  id        Int       @id @default(autoincrement())
  title     String
  total     Float?
  createdAt DateTime  @default(now())
  createdBy Int
  Tracker   Tracker[]
  Fragment   Fragment[]
  User      User      @relation(fields: [createdBy], references: [id])
}

model Fragment {
  id        Int      @id @default(autoincrement())
  date      DateTime
  amount    Float
  project   Int
  createdBy Int
  createdAt DateTime @default(now())
  Project   Project   @relation(fields: [project], references: [id])
  User      User     @relation(fields: [createdBy], references: [id])
}

model Tracker {
  id        Int       @id @default(autoincrement())
  startedAt DateTime  @default(now())
  stoppedAt DateTime?
  amount    Float?
  project   Int
  createdBy Int
  createdAt DateTime  @default(now())
  User      User      @relation(fields: [createdBy], references: [id])
  Project   Project   @relation(fields: [project], references: [id])
}
